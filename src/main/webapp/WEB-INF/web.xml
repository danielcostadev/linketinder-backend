<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>CandidatoServlet</servlet-name>
        <servlet-class>com.aczg.controller.CandidatoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CandidatoServlet</servlet-name>
        <url-pattern>/candidatos</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EmpresaServlet</servlet-name>
        <servlet-class>com.aczg.controller.EmpresaServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EmpresaServlet</servlet-name>
        <url-pattern>/empresas</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VagaServlet</servlet-name>
        <servlet-class>com.aczg.controller.VagaServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>VagaServlet</servlet-name>
        <url-pattern>/vagas</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CompetenciaServlet</servlet-name>
        <servlet-class>com.aczg.controller.CompetenciaServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CompetenciaServlet</servlet-name>
        <url-pattern>/competencias</url-pattern>
    </servlet-mapping>


</web-app>
